      integer 
     $    HPFTEST40 TC LO2,
     $    HPFTEST40 TC UP2
      parameter(HPFTEST40 TC LO2 = 0)
      parameter(HPFTEST40 TC UP2 = 251)
      integer 
     $    HPFTEST40 TS LO1,
     $    HPFTEST40 TS UP1
      parameter(HPFTEST40 TS LO1 = 1)
      parameter(HPFTEST40 TS UP1 = 250)
      integer 
     $    HPFTEST40 TS LO2,
     $    HPFTEST40 TS UP2
      parameter(HPFTEST40 TS LO2 = 1)
      parameter(HPFTEST40 TS UP2 = 250)
