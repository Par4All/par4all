
PROPER  EFFECTS

int bar(int *p)
{
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*
//             <    is written>: a[*p++] p
   a[*p++] = 2.;
   return 0;
}
int foo(int *p)
{
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*
//             <    is written>: a[*p+1]
   a[*p+1] = 2.;
   return 0;
}
int toto(int *p)
{
   int *q;
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*
//             <    is written>: a[*(q = p++)] p q
   a[*(q = p++)] = 2.;
   return 0;
}

POINTS-TO


// Points To IN:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY


// Points To OUT:
// p -> _p_1[1] , EXACT

int bar(int *p)
{

// Points To:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY

   a[*p++] = 2.;

// Points To:
// p -> _p_1[1] , EXACT

   return 0;
}

// Points To IN:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY


// Points To OUT:
// p -> _p_1[0] , EXACT

int foo(int *p)
{

// Points To:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY

   a[*p+1] = 2.;

// Points To:
// p -> _p_1[0] , EXACT

   return 0;
}

// Points To IN:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY


// Points To OUT:
// p -> _p_1[1] , EXACT

int toto(int *p)
{

// Points To: none

   int *q;

// Points To:
// p -> *NULL_POINTER* , MAY
// p -> _p_1[0] , MAY
// q -> undefined , EXACT

   a[*(q = p++)] = 2.;

// Points To:
// p -> _p_1[1] , EXACT
// q -> _p_1[0] , EXACT

   return 0;
}
