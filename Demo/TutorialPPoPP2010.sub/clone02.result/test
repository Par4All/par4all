# new codes after cloning
int clone02(int n, int s)
{
   int r = n;
   if (s<0)
      r = n-1;
   else if (s>0)
      r = n+1;
   return r;
}
int clone02_0(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (s!=-1)
      exit(0);
   {
      int r = n;
      if (s<0)
         r = n-1;
      else if (s>0)
         r = n+1;
      return r;
   }
}
int clone02_1(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (s!=1)
      exit(0);
   {
      int r = n;
      if (s<0)
         r = n-1;
      else if (s>0)
         r = n+1;
      return r;
   }
}
int clone02_2(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (s!=0)
      exit(0);
   {
      int r = n;
      if (s<0)
         r = n-1;
      else if (s>0)
