# applying partial evaluation...
int clone02(int n, int s)
{
   int r = n;
   if (s<0)
      r = n-1;
   else if (s>0)
      r = n+1;
   return r;
}
int clone02_0(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (-1!=-1)
      exit(0);
   {
      int r = 1;
      if (-1<0)
         r = 0;
      else if (s>0)
         r = n+1;
      return 0;
   }
}
int clone02_1(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (1!=1)
      exit(0);
   {
      int r = 0;
      if (1<0)
         r = n-1;
      else if (1>0)
         r = 1;
      return 1;
   }
}
int clone02_2(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   if (0!=0)
      exit(0);
   {
      int r = 1;
      if (0<0)
         r = n-1;
      else if (0>0)
         r = n+1;
      return 1;
   }
}
int main()
{
   int i = 1;
   i = clone02_0(i, -1);
   i = clone02_1(i, 1);
   i = clone02_2(i, 0);
}
# applying suppress dead code...
int clone02_1(int n, int s)
{
   // PIPS: s is assumed a constant reaching value
   int r = 0;
   r = 1;
   return 1;
}
# applying use-def elimination...
int clone02_1(int n, int s)
{
   return 1;
}
