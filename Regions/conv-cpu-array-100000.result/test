void conv_cpu(float a[100000LL*100000LL], float c[100000LL*100000LL], float a00, float a10, float a20, float a01, float a11, float a21, float a02, float a12, float a22)
{
   int i;
   int j;
   for(i = 0; i <= 99999; i += 1)
      for(j = 0; j <= 99999; j += 1) {
         int idx = i*100000LL+j;
         if (0<i&&i<100000LL-1&&0<j&&j<100000LL-1)
            c[idx] = a00*a[idx-100000LL-1]+a10*a[idx-1]+a20*a[idx+100000LL-1]+a01*a[idx-100000LL]+a11*a[idx]+a21*a[idx+100000LL]+a02*a[idx-100000LL+1]+a12*a[idx+1]+a22*a[idx+100000LL+1];
         else if (i==0&&j==0)
            c[idx] = a11*a[idx]+a21*a[idx+100000LL]+a12*a[idx+1]+a22*a[idx+100000LL+1];
         else if (i==0&&j==100000LL-1)
            c[idx] = a10*a[idx-1]+a20*a[idx+100000LL-1]+a11*a[idx]+a21*a[idx+100000LL];
         else if (i==100000LL-1&&j==0)
            c[idx] = a01*a[idx-100000LL]+a11*a[idx]+a02*a[idx-100000LL+1]+a12*a[idx+1];
         else if (i==100000LL-1&&j==100000LL-1)
            c[idx] = a00*a[idx-100000LL-1]+a10*a[idx-1]+a01*a[idx-100000LL]+a11*a[idx];
         else if (i==0&&0<j&&j<100000LL-1)
            c[idx] = a10*a[idx-1]+a20*a[idx+100000LL-1]+a11*a[idx]+a21*a[idx+100000LL]+a12*a[idx+1]+a22*a[idx+100000LL+1];
         else if (i==100000LL-1&&0<j&&j<100000LL-1)
            c[idx] = a00*a[idx-100000LL-1]+a10*a[idx-1]+a01*a[idx-100000LL]+a11*a[idx]+a02*a[idx-100000LL+1]+a12*a[idx+1];
         else if (j==0&&0<i&&i<100000LL-1)
            c[idx] = a01*a[idx-100000LL]+a11*a[idx]+a21*a[idx+100000LL]+a02*a[idx-100000LL+1]+a12*a[idx+1]+a22*a[idx+100000LL+1];
         else if (j==100000LL-1&&0<i&&i<100000LL-1)
            c[idx] = a00*a[idx-100000LL-1]+a10*a[idx-1]+a20*a[idx+100000LL-1]+a01*a[idx-100000LL]+a11*a[idx]+a21*a[idx+100000LL];
      }
}
int main(int argc, char *argv[])
{
   int loops = 10;
   float h_A[100000LL*100000LL];
   float h_C[100000LL*100000LL];
   int i;
   int j;
#pragma omp parallel for private(j)
   for(i = 0; i <= 99999; i += 1)
#pragma omp parallel for 
      for(j = 0; j <= 99999; j += 1)
         h_A[i*100000LL+j] = 1;
#pragma omp parallel for private(j)
   for(i = 0; i <= 99999; i += 1)
#pragma omp parallel for 
      for(j = 0; j <= 99999; j += 1)
         h_C[i*100000LL+j] = 0;
   

   for(i = 0; i <= loops-1; i += 1)
      conv_cpu(h_A, h_C, 1, 1, 1, 1, 1, 1, 1, 1, 1);
}
