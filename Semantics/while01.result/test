
Transformers for "while01"


C  T(while01) {while01==16}

int while01()
{

//  T(while01) {while01==16}

   // BEGIN BLOCK
   int i, j, n;

//  T(i) {0`1`n==10, i==0}


   i = 0;

//  T(j) {0`1`n==10, i==0, j==1}

   j = 1;

//  T(0`n) {0`1`n==10, 0`n==0, i==0, j==1}

   n = 0;
   {

//  T(i,j) {0`n==0, i==5, i#init==0, j==11, j#init==1}

      // BEGIN BLOCK
      int n = 10;

//  T(i,j) {0`1`n==10, 0`n==0, 2i==j-1, i#init==0, j#init==1, 0<=i,
//    i<=4}


      while (j<n) {

//  T(i,j) {0`1`n==10, 0`n==0, i==i#init+1, j==j#init+2, j<=11}

         // BEGIN BLOCK

//  T(i) {0`1`n==10, 0`n==0, i==i#init+1, j<=9}

         i++;

//  T(j) {0`1`n==10, 0`n==0, j==j#init+2, j<=11}

         j += 2;
         // END BLOCK
      }
      // END BLOCK
   }

//  T(while01) {0`1`n==10, 0`n==0, i==5, j==11, while01==16}


   return i+j;
   // END BLOCK
}

