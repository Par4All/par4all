//  P(0`n,i,j) {0`1`n==10, 0`n==0, 2i==j-1, 0<=i, i<=4}

         // BEGIN BLOCK

//  P(0`n,i,j) {0`1`n==10, 0`n==0, 2i==j-1, 0<=i, i<=4}

         i++;

//  P(0`n,i,j) {0`1`n==10, 0`n==0, 2i==j+1, 1<=i, i<=5}

         j += 2;
         // END BLOCK
      }
      // END BLOCK
   }

//  P(0`n,i,j) {0`n==0, i==5, j==11}


   return i+j;
