Transformers for "getimage" after privatization


//  T() {0==-1}

void getimage(char *filename)
{

//  T() {0==-1}

   // BEGIN BLOCK
   extern complex imagein[64][64], imageout[256][256];
   double z,  amp,  sum,  squares;
   int i,  j,  conj,  nx,  ny;
   unsigned char c;
   FILE *fp;

//  T(i,j) {0<=i}


   for(i = 0; i <= 63; i += 1)

//  T(j) {0<=i, i<=63, 0<=j}

      for(j = 0; j <= 63; j += 1) {

//  T() {0<=i, i<=63, 0<=j, j<=63}

         // BEGIN BLOCK
      PRIVATE i,j
         PRIVATE j

//  T() {0<=i, i<=63, 0<=j, j<=63}

         
         /* Some versions of <linux/posix_types.h> define these macros.  */
         
         
         
         /* It's easier to assume 8-bit bytes than to get CHAR_BIT.  */
         
         
         
         
         /* fd_set for select and pselect.  */
         
         
         /* XPG4.2 requires this member name.  Otherwise avoid the name
                from the global namespace.  */
         
         
         
         
         imagein_re[i][j] = 0.0;

//  T() {0<=i, i<=63, 0<=j, j<=63}

         imagein_im[i][j] = 0.0;
         // END BLOCK
      }

//  T(i,j) {192i==j-64, i#init==64, j#init==64, 0<=i}


   for(i = 0; i <= 255; i += 1)

//  T(j) {j#init==64, 0<=i, i<=255, 0<=j}

      for(j = 0; j <= 255; j += 1) {

//  T() {0<=i, i<=255, 0<=j, j<=255}

         // BEGIN BLOCK
      PRIVATE i,j
         PRIVATE j

//  T() {0<=i, i<=255, 0<=j, j<=255}

         imageout_re[i][j] = 0.0;

//  T() {0<=i, i<=255, 0<=j, j<=255}

         imageout_im[i][j] = 0.0;
         // END BLOCK
      }

//  T() {0==-1}


   fp = fopen(filename, "r");

//  T() {0==-1}

   fclose(fp);
   // END BLOCK
}

