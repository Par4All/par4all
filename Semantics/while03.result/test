
Transformers for "while03"


C  T(while03) {4<=while03}

int while03()
{
   int i,  j,  n;

//  T(i) {i==0}


   i = 0;

//  T(j) {j==1}

   j = 1;

//  T() {2<=n}


   if (n<=1) 

//  T() {0==-1}

      exit(1);

//  T(i,j) {2i+j#init==2i#init+j, j+1<=n, j#init+1<=n}


   while (j<n) {

//  T(i) {i==i#init+1}

      i++;

//  T(j) {j==j#init+2}

      j += 2;
   }

//  T(while03) {i+j==while03}

   return i+j;
}

Preconditions for "while03"


//  P() {}

int while03()
{
   int i,  j,  n;

//  P() {}


   i = 0;

//  P(i) {i==0}

   j = 1;

//  P(i,j) {i==0, j==1}


   if (n<=1) 

//  P(i,j) {i==0, j==1, n<=1}

      exit(1);

//  P(i,j) {i==0, j==1, 2<=n}


   while (j<n) {

//  P(i,j) {2i==j-1, 2i+2<=n, 2<=n}

      i++;

//  P(i,j) {2i==j+1, 2i<=n, 2<=n}

      j += 2;
   }

//  P(i,j) {2i==j-1, n<=2i+1, 2i<=n, 2<=n}

   return i+j;
}
