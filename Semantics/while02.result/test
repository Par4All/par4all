
Transformers for "while02"


C  T(while02) {1<=while02}

int while02()
{

//  T() {}

   int i, j, n;

//  T(i) {i==0}


   i = 0;

//  T(j) {j==1}

   j = 1;

//  T(i,j) {2i+j#init==2i#init+j, j+1<=n, j#init+1<=n}


   while (j<n) {

//  T(i) {i==i#init+1}

      i++;

//  T(j) {j==j#init+2}

      j += 2;
   }

//  T(while02) {i+j==while02}

   return i+j;
}

Preconditions for "while02"


//  P() {}

int while02()
{

//  P() {}

   int i, j, n;

//  P() {}


   i = 0;

//  P(i) {i==0}

   j = 1;

//  P(i,j) {i==0, j==1}


   while (j<n) {

//  P(i,j) {2i==j-1, 2i+2<=n, 2<=n}

      i++;

//  P(i,j) {2i==j+1, 2i<=n, 2<=n}

      j += 2;
   }

//  P(i,j) {2i==j-1, 0<=i, n<=2i+1}

   return i+j;
}
