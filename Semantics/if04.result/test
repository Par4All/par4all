//  P() {}

int if04()
{
   int i;
   int n;

//  P() {}


   i = 0;

//  P(i) {i==0}

   //n = 10;

   if (n>0) {

//  P(i) {i==0, 1<=n}

      i++;

//  P(i) {i==1, 1<=n}

      n--;
   }
   else {

//  P(i) {i==0, n<=0}

      i--;

//  P(i) {i==-1, n<=0}

      n++;
   }

//  P(i,n) {0<=i+1, i<=1}


   return i;
}
