do some tiling on loop
int main()
{
   int i, j, k;
   int a[size][size][size];
   //PIPS generated variable
   int i_t, j_t, k_t;
l300:
   for(i_t = 0; i_t <= (size-1)/1111; i_t += 1)
      for(j_t = 0; j_t <= (size-1)/2222; j_t += 1)
         for(k_t = 0; k_t <= (size-1)/3333; k_t += 1)
            for(i = 1111*i_t; i <= pips_min(2, size-1, 1111*i_t+1110); i += 1)
               for(j = 2222*j_t; j <= pips_min(2, size-1, 2222*j_t+2221); j += 1)
                  for(k = 3333*k_t; k <= pips_min(2, size-1, 3333*k_t+3332); k += 1)
                     a[i][j][k] = 2;
   return 0;
}
