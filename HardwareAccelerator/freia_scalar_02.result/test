// FREIA OpenCL includes
#include <CL/opencl.h>
#include "freia.h"
#include "private/freia_opencl_runtime.h"


// dag 0: 3 ops and 0 copies, optimized to 3 ops and 0+0+0 copies

// hold kernels for freia_scalar_02_opencl_helper_0_0_0
static cl_kernel freia_scalar_02_opencl_helper_0_0_0_kernel[2];

// compile kernels for freia_scalar_02_opencl_helper_0_0_0
static freia_status freia_scalar_02_opencl_helper_0_0_0_compile(void)
{
  // OpenCL source for freia_scalar_02_opencl_helper_0_0_0
  const char * freia_scalar_02_opencl_helper_0_0_0_source =
    "#include <freia_opencl_runtime.hcl>\n"
    "\n"
    "// opencl function freia_scalar_02_opencl_helper_0_0_0\n"
    "KERNEL void freia_scalar_02_opencl_helper_0_0_0(\n"
    "  GLOBAL PIXEL * o0,\n"
    "  int ofs_o0,\n"
    "  GLOBAL PIXEL * i0, // const?\n"
    "  int ofs_i0,\n"
    "  GLOBAL PIXEL * i1, // const?\n"
    "  int ofs_i1,\n"
    "  int width, // of the working area, vs image pitch below\n"
    "  int height, // of the working area\n"
    "  int pitch,\n"
    "  GLOBAL TMeasure * redX)\n"
    "{\n"
    "  // get id & compute global image shift\n"
    "  // no tiling on first dimension\n"
    "  // assert(height==get_global_size(0));\n"
    "  int j = get_global_id(0);\n"
    "  int shift = pitch*get_global_id(0);\n"
    "\n"
    "  // get input & output image pointers\n"
    "  GLOBAL PIXEL * p0 = o0 + ofs_o0 + shift;\n"
    "  GLOBAL PIXEL * j0 = i0 + ofs_i0 + shift;\n"
    "  GLOBAL PIXEL * j1 = i1 + ofs_i1 + shift;\n"
    "\n"
    "  // loop i upper bound\n"
    "  int workshare = (width+get_global_size(1)-1)/get_global_size(1);\n"
    "  int last = (get_global_id(1)+1)*workshare;\n"
    "  if (last>width) last = width;\n"
    "\n"
    "  // reduction stuff is currently hardcoded...\n"
    "  int vol = 0;\n"
    "  int2 mmin = { PIXEL_MAX, 0 };\n"
    "  int2 mmax = { PIXEL_MIN, 0 };\n"
    "\n"
    "  int i;\n"
    "  for (i=get_global_id(1)*workshare; i<last; i++)\n"
    "  {\n"
    "    // get input pixels\n"
    "    PIXEL in0 = j0[i];\n"
    "    PIXEL in1 = j1[i];\n"
    "    // pixel computations\n"
    "    PIXEL t8 = PIXEL_ADD(in0, in1);\n"
    "    PIXEL_MAXIMUM(red9, t8);\n"
    "    // set output pixels\n"
    "    p0[i] = t8;\n"
    "  }\n"
    "\n"
    "  // reduction copy out\n"
    "  redX[j].max = mmax.x;\n"
    "}\n";
  freia_status err = FREIA_OK;
  err |= freia_op_compile_kernel(freia_scalar_02_opencl_helper_0_0_0_source, "freia_scalar_02_opencl_helper_0_0_0", "-DPIXEL8", &freia_scalar_02_opencl_helper_0_0_0_kernel[0]);
  err |= freia_op_compile_kernel(freia_scalar_02_opencl_helper_0_0_0_source, "freia_scalar_02_opencl_helper_0_0_0", "-DPIXEL16", &freia_scalar_02_opencl_helper_0_0_0_kernel[1]);
  return err;
}

// helper function freia_scalar_02_opencl_helper_0_0_0
freia_status freia_scalar_02_opencl_helper_0_0_0(
  freia_data2d * o0,
  const freia_data2d * i0,
  const freia_data2d * i1,
  int32_t * po3)
{
  freia_status err = FREIA_OK;

  // handle on the fly compilation...
  static int to_compile = 1;
  if (to_compile) {
    err |= freia_scalar_02_opencl_helper_0_0_0_compile();
    // compilation may have failed
    if (err) return err;
    to_compile = 0;
  }

  // now get kernel, which must be have be compiled
  uint32_t bpp = i0->bpp>>4;
  cl_kernel kernel = freia_scalar_02_opencl_helper_0_0_0_kernel[bpp];

  // currently only one reduction structure...
  freia_opencl_measure_status redres;

  // call kernel freia_scalar_02_opencl_helper_0_0_0
  err |= freia_op_call_kernel(kernel, 1, 2, 0, 1, o0, i0, i1, &redres);

  // return reduction results
  *po3 = redres.maximum;

  return err;
}
#include <freia_opencl_runtime.hcl>
// generated OpenCL kernels for function freia_scalar_02

// opencl for dag 0

// opencl function freia_scalar_02_opencl_helper_0_0_0
KERNEL void freia_scalar_02_opencl_helper_0_0_0(
  GLOBAL PIXEL * o0,
  int ofs_o0,
  GLOBAL PIXEL * i0, // const?
  int ofs_i0,
  GLOBAL PIXEL * i1, // const?
  int ofs_i1,
  int width, // of the working area, vs image pitch below
  int height, // of the working area
  int pitch,
  GLOBAL TMeasure * redX)
{
  // get id & compute global image shift
  // no tiling on first dimension
  // assert(height==get_global_size(0));
  int j = get_global_id(0);
  int shift = pitch*get_global_id(0);

  // get input & output image pointers
  GLOBAL PIXEL * p0 = o0 + ofs_o0 + shift;
  GLOBAL PIXEL * j0 = i0 + ofs_i0 + shift;
  GLOBAL PIXEL * j1 = i1 + ofs_i1 + shift;

  // loop i upper bound
  int workshare = (width+get_global_size(1)-1)/get_global_size(1);
  int last = (get_global_id(1)+1)*workshare;
  if (last>width) last = width;

  // reduction stuff is currently hardcoded...
  int vol = 0;
  int2 mmin = { PIXEL_MAX, 0 };
  int2 mmax = { PIXEL_MIN, 0 };

  int i;
  for (i=get_global_id(1)*workshare; i<last; i++)
  {
    // get input pixels
    PIXEL in0 = j0[i];
    PIXEL in1 = j1[i];
    // pixel computations
    PIXEL t8 = PIXEL_ADD(in0, in1);
    PIXEL_MAXIMUM(red9, t8);
    // set output pixels
    p0[i] = t8;
  }

  // reduction copy out
  redX[j].max = mmax.x;
}

