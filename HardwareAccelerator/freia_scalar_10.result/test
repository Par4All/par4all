! initial function

int freia_scalar_10(freia_data2d *o, const freia_data2d *i)
{
   int max0, max;                                                       /*0005*/
   freia_aipo_global_max(i, &max);                                      /*0006*/
   max0 = max;                                                          /*0007*/
   freia_aipo_add_const(o, i, 1);                                       /*0008*/
   freia_aipo_global_max(o, &max);                                      /*0009*/
   return max+max0;                                                     /*0010*/
}

