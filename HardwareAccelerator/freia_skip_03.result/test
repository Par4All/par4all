
! initial function

void freia_skip_03(freia_data2d *o, freia_data2d *i)
{
   freia_data2d *t0 = freia_common_create_data(16, 128, 128);
   freia_data2d *t1 = freia_common_create_data(16, 128, 128);
   int32_t vol;
   int32_t mvol;
   int32_t seuil;
   // sub_const must be reordered *before* seuil assignment...
   freia_aipo_global_vol(i, &vol);                                      /*0009*/
   freia_aipo_sub_const(t0, i, 127);                                    /*0010*/
   mvol = vol/1000+1;                                                   /*0011*/
   freia_aipo_add_const(t1, t0, 3);                                     /*0012*/
   seuil = mvol+3;                                                      /*0013*/
   freia_aipo_threshold(o, t1, seuil, 250, false);                      /*0014*/
   // cleanup
   freia_common_destruct_data(t0);                                      /*0016*/
   freia_common_destruct_data(t1);                                      /*0017*/
}

