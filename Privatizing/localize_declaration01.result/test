int main(int argc, char *argv[])
{
   float b[N], c[N], a;                                                 /*0006*/
   int i;                                                               /*0007*/

   a = 0;                                                               /*0009*/

init:
   for(i = 0; i <= 999999; i += 1) {
      b[i] = i;                                                         /*0013*/
      c[i] = i+1;                                                       /*0014*/
   }
compute:
   for(i = 0; i <= 999999; i += 1)
      a = a+b[i]*c[i];                                                  /*0018*/

   printf("Result = %f\n", a);                                          /*0020*/
   return 0;                                                            /*0021*/
}
