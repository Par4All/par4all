main(int argc, char *argv[])
{
   // BEGIN BLOCK

   int l, m, a;

   l = 0;
   while (l<M) {
      // BEGIN BLOCK
compute:      do {
         // BEGIN BLOCK
         m = 0;
         while (m<M) {
            // BEGIN BLOCK
            a = 0;
            l++;
            // END BLOCK
         }
         // END BLOCK
      }
      while (0);
      l++;
      // END BLOCK
   }
   // END BLOCK
}
Regenerate the sources from the PIPS transformed code:
/*
 * file for for_to_while03.c
 */
// BEGIN BLOCK
enum {M=64};


extern  main(int argc, char *argv[]);
// END BLOCK
void compute(int M, int *m, int *l, int *a)
{
   // BEGIN BLOCK
compute:   do {
      // BEGIN BLOCK
      // BEGIN BLOCK
      *m = 0;
      while (*m<M) {
         // BEGIN BLOCK
         // BEGIN BLOCK
         *a = 0;
         (*l)++;
         // END BLOCK
      }
      // END BLOCK
   }
   while (0);
}
main(int argc, char *argv[])
{
   // BEGIN BLOCK

   int l, m, a;

   l = 0;
   while (l<M) {
      // BEGIN BLOCK
compute:      compute(M, &m, &l, &a);
      l++;
      // END BLOCK
   }
   // END BLOCK
}
