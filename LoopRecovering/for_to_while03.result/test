main(int argc, char *argv[])
{
   // BEGIN BLOCK

   int l, m, a;

   l = 0;
   while (l<M) {
      // BEGIN BLOCK
compute:      do {
         // BEGIN BLOCK
         m = 0;
         while (m<M) {
            // BEGIN BLOCK
            a = 0;
            l++;
            // END BLOCK
         }
         // END BLOCK
      }
      while (0);
      l++;
      // END BLOCK
   }
   // END BLOCK
}
Regenerate the sources from the PIPS transformed code:
/*
 * file for for_to_while03.c
 */
// BEGIN BLOCK
enum {M=64};


 main(int argc, char *argv[]);
//PIPS generated variable
void compute(int M, int a_0[1], int l_0[1], int m_0[1]);
// END BLOCK
void compute(int M, int a_0[1], int l_0[1], int m_0[1])
{
   // BEGIN BLOCK
   //PIPS generated variable
   int a, l, m;
   m = *m_0;
   l = *l_0;
   a = *a_0;
compute:   do {
      // BEGIN BLOCK
      m = 0;
      while (m<M) {
         // BEGIN BLOCK
         a = 0;
         l++;
         // END BLOCK
      }
      // END BLOCK
   }
   while (0);
   *a_0 = a;
   *l_0 = l;
   *m_0 = m;
   // END BLOCK
}
main(int argc, char *argv[])
{
   // BEGIN BLOCK

   int l, m, a;

   l = 0;
   while (l<M) {
      // BEGIN BLOCK
compute:      compute(M, &a, &l, &m);
      l++;
      // END BLOCK
   }
   // END BLOCK
}
