
Initial code

int foo(int c[10])
{
   int i;
   int k;
   for(i = 0; i <= 9; i += 1) {
      k = c[i];
      k = k+1;
      c[i] = k;
   }
   return c[10];
}
int main(int argc, char *argv[])
{
   int c[10];
   int i;
   int k = 0;
   for(i = 0; i <= 9; i += 1)
      c[i] = i;
   k = foo(c);
   printf("%d", k);
   return 0;
}

Code after variable_expansion

int foo(int c[10])
{
   int i;
   int k[9+1];
   for(i = 0; i <= 9; i += 1) {
      k[i] = c[i];
      k[i] = k[i]+1;
      c[i] = k[i];
   }
   return c[10];
}

