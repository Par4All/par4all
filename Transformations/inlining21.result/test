     foo
         bla

before inlining

int foo(void)
{
   bla(kernel);                                                         /*0005*/
   return 0;                                                            /*0006*/
}
int main(void)
{
   foo();                                                               /*0003*/
   return 0;                                                            /*0004*/
}

after inlining

extern int foo(void);                                                   /*0001*/
extern int main(void);                                                  /*0002*/
//PIPS generated variable
void bla(int *f1);
//PIPS generated variable
const  int kernel[3] = {1, 1, 1};
int main(void)
{
   //PIPS generated variable
   int _return0;                                                        /*0004*/
   bla(kernel);                                                         /*0005*/
   /*0005*/
   _return0 = 0;                                                        /*0006*/
   _return0;                                                            /*0009*/
   return 0;                                                            /*0010*/
}

