   return i;
}

Transformers with point-to inc01b


//  T(inc01b) {inc01b==1}

int inc01b()
{

//  T(i) {i==0}

   int i = 0;

//  T(p) {i==0}

   int *p;

//  T(p) {&i==p, i==0}


   p = &i;

//  T(i) {&i==p, i==1, i#init==0}

   (*p)++;

//  T(inc01b) {&i==p, i==1, inc01b==1}


   return i;
}

Preconditions with point-to inc01b


//  P() {}

int inc01b()
{

//  P() {}

   int i = 0;

//  P(i) {i==0}

   int *p;

//  P(i,p) {i==0}


   p = &i;

//  P(i,p) {&i==p, i==0}

   (*p)++;

//  P(i,p) {&i==p, i==1}


   return i;
}
