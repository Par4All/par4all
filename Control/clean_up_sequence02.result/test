{
// (0,1)
// (1,1)
   // BEGIN BLOCK
   {
// (1,2)
      // BEGIN BLOCK
      {
// (1,3)
         // BEGIN BLOCK
// (1,4)
         int i;                                                         /*0004*/
// (1,5)
         i = 3;                                                         /*0005*/
         // END BLOCK
      }
      {
// (1,6)
         // BEGIN BLOCK
// (1,7)
         int i;                                                         /*0008*/
// (1,8)
         i = 4;                                                         /*0009*/
         // END BLOCK
      }
      // END BLOCK
   }
// (1,9)
   return 0;                                                            /*0012*/
   // END BLOCK
}
