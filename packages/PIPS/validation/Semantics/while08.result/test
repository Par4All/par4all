int while08()
{

//  T() {}

   int i, n;

//  T(i) {i==0}


   i = 0;

//  T(n) {n==10}

   n = 10;

//  T(i,n) {i+n==i#init+n#init-1, i#init+1<=i+n, 1<=n}


   while (--n>0) {

//  T() {}

      printf("loop: i=%d, n=%d, i+n=%d\n", i, n, i+n);

//  T(i) {i==i#init+1}

      i++;
   }

//  T() {}


   printf("exit: i=%d, n=%d, i+n=%d\n", i, n, i+n);

//  T(while08) {i==while08}


   return i;
}

