void comma06()
{

//  T(i) {}

   int i;

//  T(j) {}

   int j;

//  T(k) {}

   int k;

//  T(l) {}

   int l;

//  T(m) {}

   int m;

//  T(i,j,k,l) {j==2, k==3}


   i = (j = 2, k = 3, l = j*k*m*m);

//  T(i) {i==0, j==2, k==3}

   
   // printf("%d %d %d %d\n", i, j, k, l);
   i = 0;
}
