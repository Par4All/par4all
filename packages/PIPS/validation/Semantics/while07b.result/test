int main()
{
   // BEGIN BLOCK
   int i, j, k;                                                         /*0003*/
   int a[500];                                                          /*0004*/
//             <    is written>: i

   i = 0;                                                               /*0006*/
//             <    is written>: j
   j = 1;                                                               /*0007*/
//             <    is read   >: i
   while (i<=499) {                                                     /*0008*/
      // BEGIN BLOCK
//             <    is read   >: j
//             <    is written>: j
      // The lower bound on i and j should not be lost...
      j++;                                                              /*0010*/
//             <    is read   >: i
//             <    is written>: a[i]
      // Cumulated effects should be a[i] here and not a[*]
      a[i] = i;                                                         /*0012*/
//             <    is read   >: i
//             <    is written>: i
      i = i+1;                                                          /*0013*/
      // END BLOCK
   }
//             <    is written>: k
   // We should have the precondition i == 500, j == 501
   // if we would use the proper fix point operator (derivative)
   k = 2;                                                               /*0017*/
//             <    is read   >: k
   return k;                                                            /*0018*/
   // END BLOCK
}
int main()
{
   // BEGIN BLOCK
   int i, j, k;                                                         /*0003*/
   int a[500];                                                          /*0004*/
//             <    is written>: i

   i = 0;                                                               /*0006*/
//             <    is written>: j
   j = 1;                                                               /*0007*/
//             <may be read   >: j
//             <may be written>: a[*] i j
//             <    is read   >: i
   while (i<=499) {                                                     /*0008*/
//             <may be written>: a[*]
//             <    is read   >: i j
//             <    is written>: i j
      // BEGIN BLOCK
//             <    is read   >: j
//             <    is written>: j
      // The lower bound on i and j should not be lost...
      j++;                                                              /*0010*/
//             <may be written>: a[*]
//             <    is read   >: i
      // Cumulated effects should be a[i] here and not a[*]
      a[i] = i;                                                         /*0012*/
//             <    is read   >: i
//             <    is written>: i
      i = i+1;                                                          /*0013*/
      // END BLOCK
   }
//             <    is written>: k
   // We should have the precondition i == 500, j == 501
   // if we would use the proper fix point operator (derivative)
   k = 2;                                                               /*0017*/
//             <    is read   >: k
   return k;                                                            /*0018*/
   // END BLOCK
}

//  T(main) {main==2}

int main()
{

//  T(main) {main==2}

   // BEGIN BLOCK

//  T(i,j,k) {}

   int i, j, k;                                                         /*0003*/

//  T() {}

   int a[500];                                                          /*0004*/

//  T(i) {i==0}


   i = 0;                                                               /*0006*/

//  T(j) {j==1}

   j = 1;                                                               /*0007*/

//  T(i,j) {i+j#init==i#init+j, i<=499, i#init<=i, i#init<=499}

   while (i<=499) {                                                     /*0008*/

//  T(i,j) {i==i#init+1, j==j#init+1}

      // BEGIN BLOCK

//  T(j) {j==j#init+1}

      // The lower bound on i and j should not be lost...
      j++;                                                              /*0010*/

//  T() {}

      // Cumulated effects should be a[i] here and not a[*]
      a[i] = i;                                                         /*0012*/

//  T(i) {i==i#init+1}

      i = i+1;                                                          /*0013*/
      // END BLOCK
   }

//  T(k) {k==2}

   // We should have the precondition i == 500, j == 501
   // if we would use the proper fix point operator (derivative)
   k = 2;                                                               /*0017*/

//  T(main) {k==main}

   return k;                                                            /*0018*/
   // END BLOCK
}

//  P() {}

int main()
{

//  P() {}

   // BEGIN BLOCK

//  P() {}

   int i, j, k;                                                         /*0003*/

//  P(i,j,k) {}

   int a[500];                                                          /*0004*/

//  P(i,j,k) {}


   i = 0;                                                               /*0006*/

//  P(i,j,k) {i==0}

   j = 1;                                                               /*0007*/

//  P(i,j,k) {i==0, j==1}

   while (i<=499) {                                                     /*0008*/

//  P(i,j,k) {i==j-1, 0<=i, i<=499}

      // BEGIN BLOCK

//  P(i,j,k) {i==j-1, 0<=i, i<=499}

      // The lower bound on i and j should not be lost...
      j++;                                                              /*0010*/

//  P(i,j,k) {i==j-2, 0<=i, i<=499}

      // Cumulated effects should be a[i] here and not a[*]
      a[i] = i;                                                         /*0012*/

//  P(i,j,k) {i==j-2, 0<=i, i<=499}

      i = i+1;                                                          /*0013*/
      // END BLOCK
   }

//  P(i,j,k) {i==500, j==501}

   // We should have the precondition i == 500, j == 501
   // if we would use the proper fix point operator (derivative)
   k = 2;                                                               /*0017*/

//  P(i,j,k) {i==500, j==501, k==2}

   return k;                                                            /*0018*/
   // END BLOCK
}
