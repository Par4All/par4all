
Source code with proper effects

void assign01()
{
   int i;                                                               /*0010*/
   int j;                                                               /*0011*/
//             <    is written>: i j

   i = 2+(j = 1)+3;                                                     /*0013*/
//             <    is read   >: i

   foo(i);                                                              /*0015*/
}

Source code with cumulated effects

void assign01()
{
   int i;                                                               /*0010*/
   int j;                                                               /*0011*/
//             <    is written>: i j

   i = 2+(j = 1)+3;                                                     /*0013*/
//             <    is read   >: i

   foo(i);                                                              /*0015*/
}

Source code with transformers


//  T() {}

void assign01()
{

//  T(i) {}

   int i;                                                               /*0010*/

//  T(j) {}

   int j;                                                               /*0011*/

//  T(i,j) {i==6, j==1}


   i = 2+(j = 1)+3;                                                     /*0013*/

//  T() {}


   foo(i);                                                              /*0015*/
}
