         cdest[i*element_size*d2_block_size+j] = csrc[(i+d1_offset)*element_size*d2_size+j];
}
void erode(int isi, int isj, int new_image[isi][isj], int image[isi][isj])
{

   int i, j, k, l;
   for(l = 0; l <= 4; l += 1)

      for(i = 2; i <= isi-3; i += 1)
         for(j = 2; j <= isj-3; j += 1) {
            int l = image[i][j];
            for(k = 0; k <= 4; k += 1)
               l = MIN(l, image[i][j+k-1]);
            new_image[i][j] = l;
         }
}
