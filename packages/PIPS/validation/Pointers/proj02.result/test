//  {}
int main(void)
{
//  points to = {}
   int i;
//  points to = {}
   int **pp = (void *) 0;
//  {(pp,*NULL_POINTER*,-Exact-)}

   srand(time((void *) 0));
//  {(pp,*NULL_POINTER*,-Exact-)}
   if (alea()) {
//  {(pp,*NULL_POINTER*,-Exact-)}
      int *pi = &i;
//  {(pi,i,-Exact-);(pp,*NULL_POINTER*,-Exact-)}
      pp = &pi;
//  {(pi,i,-Exact-);(pp,pi,-Exact-)}
      **pp = 1;
   }
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-);(pp,*NULL_POINTER*,-MAY-)}
   
   // pp points to a dead value in the stack
   printf("%p\n", pp);
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-);(pp,*NULL_POINTER*,-MAY-)}
   
   // possible segfault.
   // should generate an error while analyzing?
   if (pp)
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-);(pp,*NULL_POINTER*,-MAY-)}
      **pp = 0;
//  {(pp,*ANY_MODULE*:*NOWHERE*_b0,-MAY-);(pp,*NULL_POINTER*,-MAY-)}
   return 0;
}
//  {}
static int alea(void)
{
//  points to = {}
   int r = rand();
//  points to = {}
   printf("%d\n", r);
//  points to = {}
   return rand()%2==1;
}

