Parallelization of "main" after privatization

int main()
{
   float a[10];                                                         /*0004*/
   float b[10];                                                         /*0005*/
   int i, j;                                                            /*0006*/
   float x = 2.12;                                                      /*0007*/
   float z = 3.0;                                                       /*0008*/
   //float y;
   
   x += z;                                                              /*0011*/

#pragma omp parallel for 
   for(i = 0; i <= 9; i += 1) {
      float y = 2.0;                                                    /*0014*/
      a[i] = x*y;                                                       /*0015*/
      b[i] = z*y;                                                       /*0016*/
   }
}
