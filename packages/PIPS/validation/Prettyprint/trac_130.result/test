
Proper effects for "main"

int main()
{
   float a[10];                                                         /*0004*/
   float b[10];                                                         /*0005*/
   int i, j;                                                            /*0006*/
//               <must be written>: x
   float x = 2.12;                                                      /*0007*/
//               <must be written>: z
   float z = 3.0;                                                       /*0008*/
//               <must be read   >: x z
//               <must be written>: x
   //float y;
   
   x += z;                                                              /*0011*/
//               <must be written>: i

   for(i = 0; i <= 9; i += 1) {
//               <must be written>: y
      float y = 2.0;                                                    /*0014*/
//               <must be read   >: i x y
//               <must be written>: a[i]
      a[i] = x*y;                                                       /*0015*/
//               <must be read   >: i y z
//               <must be written>: b[i]
      b[i] = z*y;                                                       /*0016*/
   }
}

Privatization


Preconditions for "main" after privatization


//  P() {}

int main()
{

//  P() {}

   float a[10];                                                         /*0004*/

//  P() {}

   float b[10];                                                         /*0005*/

//  P() {}

   int i, j;                                                            /*0006*/

//  P(i,j) {}

   float x = 2.12;                                                      /*0007*/

//  P(i,j) {}

   float z = 3.0;                                                       /*0008*/

//  P(i,j) {}

   //float y;
   
   x += z;                                                              /*0011*/

//  P(i,j) {}


   for(i = 0; i <= 9; i += 1) {

//  P(i,j) {0<=i, i<=9}

      float y = 2.0;                                                    /*0014*/

//  P(i,j) {0<=i, i<=9}

      a[i] = x*y;                                                       /*0015*/

//  P(i,j) {0<=i, i<=9}

      b[i] = z*y;                                                       /*0016*/
   }
}

