
TRANSFORMERS


//  T() {}

void ts_singlestate(void)
{

//  T(x,y) {}

   int x, y;

//  T(x,y) {x==0, y==0}

   x = y = 0;

//  T() {x==0, y==0}

   if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

      checking_error();

//  T(x,y) {x<=102, x#init+y<=x+y#init, y<=x, x+y<=202, 0<=y,
//    y#init<=y}

   while (rand_b())

//  T(x,y) {x+y==x#init+y#init+2, x#init+1<=x, x<=x#init+2, y<=x,
//    x+y<=202, x#init<=100, 0<=y}

      if (rand_b()) {

//  T() {x<=100}

         if (!(x<=100))

//  T() {0==-1}

            deadlock();

//  T(x) {x==x#init+2, x<=102}

         x += 2;

//  T() {x<=102, y<=x, x+y<=202, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

            checking_error();
      }
      else {

//  T() {x<=100}

         if (!(x<=100))

//  T() {0==-1}

            deadlock();

//  T(x) {x==x#init+1, x<=101}

         x++;

//  T(y) {y==y#init+1, x<=101}

         y++;

//  T() {x<=101, y<=x, x+y<=202, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

            checking_error();
      }
}

//  T() {}

void ts_restructured(void)
{

//  T(x,y) {}

   int x, y;

//  T(x,y) {x==0, y==0}

   x = y = 0;

//  T() {x==0, y==0}

   if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

      checking_error();

//  T(x,y) {x<=100, x#init+y<=x+y#init, y<=x, 0<=y, y#init<=y}

   while (rand_b())

//  T(x,y) {x+y==x#init+y#init+2, x<=100, x#init+1<=x, x<=x#init+2,
//    y<=x, 0<=y}

      if (rand_b()) {

//  T() {x<=98}

         if (!(x<=98))

//  T() {0==-1}

            deadlock();

//  T(x) {x==x#init+2, x<=100}

         x += 2;

//  T() {x<=100, y<=x, x+y<=202, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

            checking_error();
      }
      else {

//  T() {x<=99}

         if (!(x<=99))

//  T() {0==-1}

            deadlock();

//  T(x) {x==x#init+1, x<=100}

         x++;

//  T(y) {y==y#init+1, x<=100}

         y++;

//  T() {x<=100, y<=x, x+y<=202, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

            checking_error();
      }

//  T(x,y) {x+y==x#init+y#init+2, 101<=x, x<=x#init+2, x#init+2<=x+y,
//    x+y<=2x#init+2, x#init<=100}

   if (rand_b()) {

//  T() {99<=x, x<=100, y<=x, 0<=y}

      if (!(x<=100&&x>=99))

//  T() {0==-1}

         deadlock();

//  T(x) {x==x#init+2, 101<=x, x<=102, y+2<=x, 0<=y}

      x += 2;

//  T() {101<=x, x<=102, y+2<=x, x+y<=202, 0<=y}

      if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

         checking_error();
   }
   else {

//  T() {x==100, 0<=y, y<=100}

      if (!(x==100))

//  T() {0==-1}

         deadlock();

//  T(x) {x==101, x#init==100, 0<=y, y<=100}

      x++;

//  T(y) {x==101, y==y#init+1, 1<=y, y<=101}

      y++;

//  T() {x==101, 1<=y, y<=101}

      if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  T() {0==-1}

         checking_error();
   }
}

PRECONDITIONS


//  P() {}

void ts_singlestate(void)
{

//  P() {}

   int x, y;

//  P(x,y) {}

   x = y = 0;

//  P(x,y) {x==0, y==0}

   if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

      checking_error();

//  P(x,y) {x==0, y==0}

   while (rand_b())

//  P(x,y) {x<=102, y<=x, x+y<=202, 0<=y}

      if (rand_b()) {

//  P(x,y) {x<=102, y<=x, x+y<=202, 0<=y}

         if (!(x<=100))

//  P(x,y) {101<=x, x<=102, y<=x, x+y<=202, 0<=y}

            deadlock();

//  P(x,y) {x<=100, y<=x, x+y<=202, 0<=y}

         x += 2;

//  P(x,y) {x<=102, y+2<=x, x+y<=204, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

            checking_error();
      }
      else {

//  P(x,y) {x<=102, y<=x, x+y<=202, 0<=y}

         if (!(x<=100))

//  P(x,y) {101<=x, x<=102, y<=x, x+y<=202, 0<=y}

            deadlock();

//  P(x,y) {x<=100, y<=x, x+y<=202, 0<=y}

         x++;

//  P(x,y) {x<=101, y+1<=x, x+y<=203, 0<=y}

         y++;

//  P(x,y) {x<=101, y<=x, x+y<=204, 1<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

            checking_error();
      }
}

//  P() {}

void ts_restructured(void)
{

//  P() {}

   int x, y;

//  P(x,y) {}

   x = y = 0;

//  P(x,y) {x==0, y==0}

   if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

      checking_error();

//  P(x,y) {x==0, y==0}

   while (rand_b())

//  P(x,y) {x<=100, y<=x, 0<=y}

      if (rand_b()) {

//  P(x,y) {x<=100, y<=x, 0<=y}

         if (!(x<=98))

//  P(x,y) {99<=x, x<=100, y<=x, 0<=y}

            deadlock();

//  P(x,y) {x<=98, y<=x, 0<=y}

         x += 2;

//  P(x,y) {x<=100, y+2<=x, 0<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

            checking_error();
      }
      else {

//  P(x,y) {x<=100, y<=x, 0<=y}

         if (!(x<=99))

//  P(x,y) {x==100, 0<=y, y<=100}

            deadlock();

//  P(x,y) {x<=99, y<=x, 0<=y}

         x++;

//  P(x,y) {x<=100, y+1<=x, 0<=y}

         y++;

//  P(x,y) {x<=100, y<=x, 1<=y}

         if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

            checking_error();
      }

//  P(x,y) {x<=100, y<=x, 0<=y}

   if (rand_b()) {

//  P(x,y) {x<=100, y<=x, 0<=y}

      if (!(x<=100&&x>=99))

//  P(x,y) {x<=98, y<=x, 0<=y}

         deadlock();

//  P(x,y) {99<=x, x<=100, y<=x, 0<=y}

      x += 2;

//  P(x,y) {101<=x, x<=102, y+2<=x, 0<=y}

      if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

         checking_error();
   }
   else {

//  P(x,y) {x<=100, y<=x, 0<=y}

      if (!(x==100))

//  P(x,y) {x<=99, y<=x, 0<=y}

         deadlock();

//  P(x,y) {x==100, 0<=y, y<=100}

      x++;

//  P(x,y) {x==101, 0<=y, y<=100}

      y++;

//  P(x,y) {x==101, 1<=y, y<=101}

      if (!(0<=y&&y<=x&&x<=102&&x+y<=202))

//  P() {0==-1}

         checking_error();
   }
}
