
TRANSFORMERS


//  T() {0==-1}

void rotation03()
{

//  T(x,y) {x==1, y==0}

   int x = 1, y = 0;

//  T(x,y) {x#init==1, y#init==0}


   while (1) {

//  T(x,y) {}

      if (alea())

//  T(x,y) {x==2, y==0}

         x = 2, y = 0;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==3, y==1}

         x = 3, y = 1;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==3, y==2}

         y = 2, x = 3;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==2, y==3}

         x = 2, y = 3;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==1, y==3}

         x = 1, y = 3;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==0, y==2}

         x = 0, y = 2;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==0, y==1}

         y = 1, x = 0;

//  T(x,y) {}


      if (alea())

//  T(x,y) {x==1, y==0}

         x = 1, y = 0;
   }
}

PRECONDITIONS


//  P() {}

void rotation03()
{

//  P() {}

   int x = 1, y = 0;

//  P(x,y) {x==1, y==0}


   while (1) {

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 2, y = 0;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 3, y = 1;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         y = 2, x = 3;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 2, y = 3;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 1, y = 3;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 0, y = 2;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         y = 1, x = 0;

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}


      if (alea())

//  P(x,y) {0<=x, x<=3, 1<=x+y, y<=x+2, x<=y+2, x+y<=5, 0<=y, y<=3}

         x = 1, y = 0;
   }
}
