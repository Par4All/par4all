
TRANSFORMERS


//  T() {0==-1}

void run(void)
{

//  T(x) {x==0}

   int x = 0;

//  T(t) {t==0, x==0}

   int t = 0;

//  T(b) {0<=b}

   int b = rand();

//  T(t,x) {t#init==0, x#init==0, 0<=b, 0<=t+x, x<=t}

   // b > 0 should be enough
   while (1) {

//  T(x) {0<=b, x<=x#init, x#init<=x+1}

      if (rand()%2&&x>=-b)

//  T(x) {x==x#init-1, 0<=b, 0<=b+x+1}

         x--;

//  T(x) {0<=b, x#init<=x, x<=x#init+1}

      if (rand()%2&&x<=b)

//  T(x) {x==x#init+1, 0<=b, x<=b+1}

         x++;

//  T(t) {t==t#init+1, 0<=b}

      t++;
   }
}

PRECONDITIONS


//  P() {}

void run(void)
{

//  P() {}

   int x = 0;

//  P(x) {x==0}

   int t = 0;

//  P(t,x) {t==0, x==0}

   int b = rand();

//  P(b,t,x) {t==0, x==0, 0<=b}

   // b > 0 should be enough
   while (1) {

//  P(b,t,x) {0<=b, 0<=b+x+1, x<=b+1, 0<=t+x, x<=t}

      if (rand()%2&&x>=-b)

//  P(b,t,x) {0<=b, 0<=b+x, x<=b+1, 0<=t+x, x<=t}

         x--;

//  P(b,t,x) {0<=b, 0<=b+x+1, x<=b+1, 0<=t, x<=t, 0<=t+x+1}

      if (rand()%2&&x<=b)

//  P(b,t,x) {0<=b, x<=b, 0<=b+x+1, 0<=t, x<=t, 0<=t+x+1}

         x++;

//  P(b,t,x) {0<=b, 0<=b+x+1, x<=b+1, 0<=t, 0<=t+x+1, x<=t+1}

      t++;
   }
}
