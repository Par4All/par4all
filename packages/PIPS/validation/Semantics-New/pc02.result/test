
Source code with transformers


//  T() {0==-1}

int main()
{

//  T(s0,s1,s2) {s0==1, s1==0, s2==0}

   int s0 = 1, s1 = 0, s2 = 0;

//  T(s0,s1,s2) {s0+s1+s2==1, s0#init==1, s1#init==0, s2#init==0}

   //int c0 = 1, c1 = 0, c2 = 0;
   
   while (1)

//  T(s0,s1,s2) {s0+s1+s2==s0#init+s1#init+s2#init,
//    2s0#init+s1#init<=2s0+s1+1, s0+s1#init<=s0#init+s1+1,
//    s0+2s1<=s0#init+2s1#init+1}

      if (s0==1) {

//  T(s0) {s0==0, s0#init==1}

         s0--;

//  T(s1) {s0==0, s1==s1#init+1}

         s1++;
      }
      else if (s1==1) {

//  T(s1) {s1==0, s1#init==1}

         s1--;

//  T(s2) {s1==0, s2==s2#init+1}

         s2++;
      }
      else if (s2==1) {

//  T(s2) {s2==0, s2#init==1}

         s2--;

//  T(s0) {s0==s0#init+1, s2==0}

         s0++;
      }

//  T() {0==-1}

   return 0;
}

Source code with preconditions


//  P() {}

int main()
{

//  P() {}

   int s0 = 1, s1 = 0, s2 = 0;

//  P(s0,s1,s2) {s0==1, s1==0, s2==0}

   //int c0 = 1, c1 = 0, c2 = 0;
   
   while (1)

//  P(s0,s1,s2) {s0+s1+s2==1, 0<=s0, 0<=s1, 0<=s2}

      if (s0==1) {

//  P(s0,s1,s2) {s0==1, s1==0, s2==0}

         s0--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s1++;
      }
      else if (s1==1) {

//  P(s0,s1,s2) {s0==0, s1==1, s2==0}

         s1--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s2++;
      }
      else if (s2==1) {

//  P(s0,s1,s2) {s0==0, s1==0, s2==1}

         s2--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s0++;
      }

//  P() {0==-1}

   return 0;
}

After transformer refinement


//  P() {}

int main()
{

//  P() {}

   int s0 = 1, s1 = 0, s2 = 0;

//  P(s0,s1,s2) {s0==1, s1==0, s2==0}

   //int c0 = 1, c1 = 0, c2 = 0;
   
   while (1)

//  P(s0,s1,s2) {s0+s1+s2==1, 0<=s0, s0<=1, 0<=s1, s1<=1, 0<=s2,
//    s2<=1}

      if (s0==1) {

//  P(s0,s1,s2) {s0==1, s1==0, s2==0}

         s0--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s1++;
      }
      else if (s1==1) {

//  P(s0,s1,s2) {s0==0, s1==1, s2==0}

         s1--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s2++;
      }
      else if (s2==1) {

//  P(s0,s1,s2) {s0==0, s1==0, s2==1}

         s2--;

//  P(s0,s1,s2) {s0==0, s1==0, s2==0}

         s0++;
      }

//  P() {0==-1}

   return 0;
}
