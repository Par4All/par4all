
Parsed printed file for "malloc02"

int main()
{
   int i, n;
   char buffer[50];

   printf("How long do you want the string? ");
   scanf("%d", &i);

   buffer = (char *) malloc(i+1);
   if (buffer==(void *) 0)
      exit(1);

   for (n = 0;n<i;n++)
      buffer[n] = rand()%26+'a';
   buffer[i] = '\0';

   printf("Random string: %s\n", buffer);
   memmove(buffer, "bonjour", 7);
   free(buffer);
   
   
   return 0;
}

Proper effetcs for "malloc02"

int main()
{
   int i, n;
   char buffer[50];
//             <may be read   >: stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: stdout __IO_EFFECTS:LUNS[1]
//             <    is written>: __IO_EFFECTS:LUNS[1]

   printf("How long do you want the string? ");
//             <may be read   >: stdin[0]
//             <may be written>: stdin[0]
//             <    is read   >: stdin __IO_EFFECTS:LUNS[0]
//             <    is written>: i __IO_EFFECTS:LUNS[0]
   scanf("%d", &i);
//             <    is read   >: i _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: _MALLOC_EFFECTS:_MALLOC_

   buffer = (char *) malloc(i+1);
   if (buffer==(void *) 0)
      exit(1);
//             <    is read   >: i
//             <    is written>: n

   for(n = 0; n <= i-1; n += 1)
//             <    is read   >: i n _RANDOM_EFFECTS:GEN_SEED
//             <    is written>: buffer[n] _RANDOM_EFFECTS:GEN_SEED
      buffer[n] = rand()%26+'a';
//             <    is read   >: i
//             <    is written>: buffer[i]
   buffer[i] = '\0';
//             <may be read   >: buffer[*] stdout[0]
//             <may be written>: stdout[0]
//             <    is read   >: stdout __IO_EFFECTS:LUNS[1]
//             <    is written>: __IO_EFFECTS:LUNS[1]

   printf("Random string: %s\n", buffer);
//             <    is read   >: _MEMMOVE_EFFECTS:_MEMMOVE_
//             <    is written>: buffer[0:7-1] 
//                               _MEMMOVE_EFFECTS:_MEMMOVE_
   memmove(buffer, "bonjour", 7);
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: _MALLOC_EFFECTS:_MALLOC_
   free(buffer);
   
   
   return 0;
}
