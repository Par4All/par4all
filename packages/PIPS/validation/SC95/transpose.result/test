      SUBROUTINE HOST
      implicit none
      include "global_parameters.h"
      include "hpfc_commons.h"
      include "hpfc_includes.h"
      include "TRANSPOSE_parameters.h"
      INTEGER*4 N
      PARAMETER (N = 512)
      INTEGER ALPHA1,ALPHA2,LALPHA1,LALPHA2,PSI1,PSI2,T LID,I
      REAL*4 A(1:N,1:N),B(1:N,1:N)
      CALL HPFC INIT HOST
c
c initialize b
c
! collecting distributed variable B
      PSI1 = 1
      DO PSI2 = PSI1, 1
         BUF INDEX = 0
         RECEIVED NOT PERFORMED = .FALSE.
         SIZE OF RECEIVED BUFFER = 0
         T LID = -2+2*PSI1+PSI2
         CALL HPFC RCV FROM NODE(T LID)
         CALL HPFC REAL4 BUFUPK
         DO ALPHA2 = -252+256*PSI1, 13
            ALPHA1 = -3+ALPHA2
            LALPHA1 = 256+ALPHA1-256*PSI1
            LALPHA2 = 256+ALPHA2-256*PSI2
            BUF INDEX = BUF INDEX+1
            B(ALPHA1,ALPHA2) = HPFC REAL4 BUFF(BUF INDEX)
         ENDDO
      ENDDO
! end of collect
      PRINT *, (B(I,I+3), I = 1, 10)
! updating shared variable I
      BUF INDEX = 0
      SEND NOT INITIALIZED = .TRUE.
      BUF INDEX = BUF INDEX+1
      HPFC INTEGER4 BUFF(BUF INDEX) = I
      CALL HPFC INTEGER4 BUFPCK
      CALL HPFC HCAST
! end of update
c
c first a simple copy
c
c A = B
c
c
c now transpose !
c
c B = TRANSPOSE(A)
c
! collecting distributed variable A_1
      DO PSI1 = 1, 2
         PSI2 = 1
         BUF INDEX = 0
         RECEIVED NOT PERFORMED = .FALSE.
         SIZE OF RECEIVED BUFFER = 0
         T LID = -2+2*PSI1+PSI2
         CALL HPFC RCV FROM NODE(T LID)
         CALL HPFC REAL4 BUFUPK
         DO LALPHA2 = 1, 5
            ALPHA2 = -2+2*LALPHA2+PSI1
            ALPHA1 = 3+ALPHA2
            LALPHA1 = 256+ALPHA1-256*PSI2
            BUF INDEX = BUF INDEX+1
            A(ALPHA1,ALPHA2) = HPFC REAL4 BUFF(BUF INDEX)
         ENDDO
      ENDDO
! end of collect
c
c END OF TRANSPOSITION
c
      PRINT *, (A(I+3,I), I = 1, 10)
! updating shared variable I
      BUF INDEX = 0
      SEND NOT INITIALIZED = .TRUE.
      BUF INDEX = BUF INDEX+1
      HPFC INTEGER4 BUFF(BUF INDEX) = I
      CALL HPFC INTEGER4 BUFPCK
      CALL HPFC HCAST
! end of update
      CALL HPFC HOST END
      END
