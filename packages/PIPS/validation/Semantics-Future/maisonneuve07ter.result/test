
TRANSFORMERS


//  T() {}

void run(void)
{

//  T(b,t,x) {}

   int x, t, b;

//  T(x) {}

   x = rand();

//  T(t) {t==0}

   // works with any initial value of x
   t = 0;

//  T(b) {t==0}

   b = rand();

//  T(t,x) {t#init==0, x#init<=t+x, x<=t+x#init}

   // works with any value of b > 0
   
   if (b>0) {

//  T(t,x) {t#init==0, 1<=b, 0<=b+x+1, x<=b+1, x#init<=t+x,
//    x<=t+x#init}

      if (x<-b-1) {

//  T(t,x) {1<=b, b+x+2<=t, 0<=t, t#init+x<=t+x#init, x#init<=x}

         while (flip())

//  T(t,x) {t==t#init+1, 1<=b, x#init<=x, x<=x#init+1}

            if (flip())

//  T(t,x) {t==t#init+1, x==x#init+1, 1<=b, b+x+2<=0}

               if (x<-b-2) {

//  T(x) {x==x#init+1, 1<=b, b+x+2<=0}

                  x++;

//  T(t) {t==t#init+1, 1<=b, b+x+2<=0}

                  t++;
               }
               else

//  T() {1<=b, 0<=b+x+2}

                  while (1)

//  T() {1<=b, 0<=b+x+2}

                     ;
            else if (1)

//  T(t) {t==t#init+1, 1<=b}

               t++;
            else

//  T() {0==-1}

               while (1)

//  T() {0==-1}

                  ;

//  T(t,x) {b+x==-1, b+x#init==-2, t==t#init+1, 1<=b, 1<=t}

         if (x==-b-2) {

//  T(x) {b+x==-1, b+x#init==-2, 1<=b, 0<=t}

            x++;

//  T(t) {b+x==-1, t==t#init+1, 1<=b, 1<=t}

            t++;
         }
         else

//  T() {1<=b, b+x+3<=2t, b+x+2<=t, 0<=t}

            while (1)

//  T() {1<=b, b+x+3<=2t, b+x+2<=t, 0<=t}

               ;
      }
      else if (x>b+1) {

//  T(t,x) {1<=b, b+2<=t+x, 0<=t, t#init+x#init<=t+x, x<=x#init}

         while (flip())

//  T(t,x) {t==t#init+1, 1<=b, x#init<=x+1, x<=x#init}

            if (flip())

//  T(t,x) {t==t#init+1, x==x#init-1, 1<=b, b+2<=x}

               if (x>b+2) {

//  T(x) {x==x#init-1, 1<=b, b+2<=x}

                  x--;

//  T(t) {t==t#init+1, 1<=b, b+2<=x}

                  t++;
               }
               else

//  T() {1<=b, x<=b+2}

                  while (1)

//  T() {1<=b, x<=b+2}

                     ;
            else if (1)

//  T(t) {t==t#init+1, 1<=b}

               t++;
            else

//  T() {0==-1}

               while (1)

//  T() {0==-1}

                  ;

//  T(t,x) {b==x-1, b==x#init-2, t==t#init+1, 1<=b, 0<=2b+t+2, 1<=t}

         if (x==b+2) {

//  T(x) {b==x-1, b==x#init-2, 1<=b, 0<=2b+t+3, 0<=t}

            x--;

//  T(t) {b==x-1, t==t#init+1, 1<=b, 0<=2b+t+2, 1<=t}

            t++;
         }
         else

//  T() {1<=b, 0<=b+t+x+1, b+3<=2t+x, b+2<=t+x, 0<=t}

            while (1)

//  T() {1<=b, 0<=b+t+x+1, b+3<=2t+x, b+2<=t+x, 0<=t}

               ;
      }

//  T(t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t, t#init+x#init<=t+x,
//    t#init+x<=t+x#init}

      while (flip()) {

//  T() {1<=b, 0<=b+x+1, x<=b+1}

         if (!(-b-1<=x&&x<=b+1))

//  T() {0==-1}

            checking_error();

//  T(t,x) {t==t#init+1, 1<=b, 0<=b+x+1, x<=b+1, 0<=b+x#init+1,
//    x#init<=b+1, x#init<=x+1, x<=x#init+1}

         if (flip())

//  T(t,x) {t==t#init+1, x==x#init-1, 1<=b, 0<=b+x+1, x<=b}

            if (x>=-b) {

//  T(x) {x==x#init-1, 1<=b, 0<=b+x+1, x<=b}

               x--;

//  T(t) {t==t#init+1, 1<=b, 0<=b+x+1, x<=b}

               t++;
            }
            else

//  T() {b+x==-1, 1<=b}

               while (1)

//  T() {b+x==-1, 1<=b}

                  ;
         else if (flip())

//  T(t,x) {t==t#init+1, x==x#init+1, 1<=b, 0<=b+x, x<=b+1}

            if (x<=b) {

//  T(x) {x==x#init+1, 1<=b, 0<=b+x, x<=b+1}

               x++;

//  T(t) {t==t#init+1, 1<=b, 0<=b+x, x<=b+1}

               t++;
            }
            else

//  T() {b==x-1, 1<=b}

               while (1)

//  T() {b==x-1, 1<=b}

                  ;
         else if (1)

//  T(t) {t==t#init+1, 1<=b, 0<=b+x+1, x<=b+1}

            t++;
         else

//  T() {0==-1}

            while (1)

//  T() {0==-1}

               ;
      }
   }
}

PRECONDITIONS


//  P() {}

void run(void)
{

//  P() {}

   int x, t, b;

//  P(b,t,x) {}

   x = rand();

//  P(b,t,x) {}

   // works with any initial value of x
   t = 0;

//  P(b,t,x) {t==0}

   b = rand();

//  P(b,t,x) {t==0}

   // works with any value of b > 0
   
   if (b>0) {

//  P(b,t,x) {t==0, 1<=b}

      if (x<-b-1) {

//  P(b,t,x) {t==0, 1<=b, b+x+2<=0}

         while (flip())

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=t}

            if (flip())

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=t}

               if (x<-b-2) {

//  P(b,t,x) {1<=b, b+x+2<=t, b+x+3<=0, 0<=t}

                  x++;

//  P(b,t,x) {1<=b, b+x+1<=t, b+x+2<=0, 0<=t}

                  t++;
               }
               else

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=b+x+2, 0<=t}

                  while (1)

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=b+x+2, 0<=t}

                     ;
            else if (1)

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=t}

               t++;
            else

//  P() {0==-1}

               while (1)

//  P() {0==-1}

                  ;

//  P(b,t,x) {1<=b, b+x+2<=t, 0<=t}

         if (x==-b-2) {

//  P(b,t,x) {b+x==-2, 1<=b, 0<=t}

            x++;

//  P(b,t,x) {b+x==-1, 1<=b, 0<=t}

            t++;
         }
         else

//  P(b,t,x) {1<=b, b+x+3<=2t, b+x+2<=t, 0<=t}

            while (1)

//  P(b,t,x) {1<=b, b+x+3<=2t, b+x+2<=t, 0<=t}

               ;
      }
      else if (x>b+1) {

//  P(b,t,x) {t==0, 1<=b, 0<=b+x+1, b+2<=x}

         while (flip())

//  P(b,t,x) {1<=b, b+2<=t+x, 0<=t}

            if (flip())

//  P(b,t,x) {1<=b, b+2<=t+x, 0<=t}

               if (x>b+2) {

//  P(b,t,x) {1<=b, b+2<=t+x, b+3<=x, 0<=t}

                  x--;

//  P(b,t,x) {1<=b, b+1<=t+x, b+2<=x, 0<=t}

                  t++;
               }
               else

//  P(b,t,x) {1<=b, b+2<=t+x, x<=b+2, 0<=t}

                  while (1)

//  P(b,t,x) {1<=b, b+2<=t+x, x<=b+2, 0<=t}

                     ;
            else if (1)

//  P(b,t,x) {1<=b, b+2<=t+x, 0<=t}

               t++;
            else

//  P() {0==-1}

               while (1)

//  P() {0==-1}

                  ;

//  P(b,t,x) {1<=b, b+2<=t+x, 0<=t}

         if (x==b+2) {

//  P(b,t,x) {b==x-2, 1<=b, 0<=t}

            x--;

//  P(b,t,x) {b==x-1, 1<=b, 0<=2b+t+3, 0<=t}

            t++;
         }
         else

//  P(b,t,x) {1<=b, b+3<=2t+x, b+2<=t+x, 0<=t}

            while (1)

//  P(b,t,x) {1<=b, b+3<=2t+x, b+2<=t+x, 0<=t}

               ;
      }

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

      while (flip()) {

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

         if (!(-b-1<=x&&x<=b+1))

//  P() {0==-1}

            checking_error();

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

         if (flip())

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

            if (x>=-b) {

//  P(b,t,x) {1<=b, 0<=b+x, x<=b+1, 0<=t}

               x--;

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b, 0<=t}

               t++;
            }
            else

//  P(b,t,x) {b+x==-1, 1<=b, 0<=t}

               while (1)

//  P(b,t,x) {b+x==-1, 1<=b, 0<=t}

                  ;
         else if (flip())

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

            if (x<=b) {

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b, 0<=t}

               x++;

//  P(b,t,x) {1<=b, 0<=b+x, x<=b+1, 0<=t}

               t++;
            }
            else

//  P(b,t,x) {b==x-1, 1<=b, 0<=t}

               while (1)

//  P(b,t,x) {b==x-1, 1<=b, 0<=t}

                  ;
         else if (1)

//  P(b,t,x) {1<=b, 0<=b+x+1, x<=b+1, 0<=t}

            t++;
         else

//  P() {0==-1}

            while (1)

//  P() {0==-1}

               ;
      }
   }
}
