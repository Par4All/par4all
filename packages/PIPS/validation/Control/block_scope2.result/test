// (0,2)
   int x_;
// (0,3)
   int x = 6;                                                           /*0019*/
// (0,4)
//:   BEGIN UNSTRUCTURED
// (1,2)
lab1:   x--;                                                                 /*0022*/
   {
// (1,4)
      int x;                                                            /*0024*/
// (1,5)
      x++;                                                              /*0025*/
   }
// (1,6)
   x_ = -1;
// (2,1)
   if (x_>0) goto lab1;                                                 /*0030*/
// (3,1)
   return x;                                                            /*0032*/
//:   END UNSTRUCTURED
}

