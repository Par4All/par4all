Try to restructure the code for more precision:
// (0,1)
// BEGIN BLOCK
// (0,2)
extern int main(int argc, char *argv[]);                                /*0001*/
// END BLOCK
int main(int argc, char *argv[])
{
// (0,1)
// (1,1)
   // BEGIN BLOCK
   {
// (1,2)
      // BEGIN BLOCK
// (1,3)
      int i;                                                            /*0003*/
// (1,4)
      i = 3;                                                            /*0005*/
// (1,5)
      i = 4;                                                            /*0008*/
      // END BLOCK
   }
// (1,6)
   return 0;                                                            /*0011*/
   // END BLOCK
}
