
"foo" file

int foo(int i)
{
   int j;
   int n;

   if (n>0)
      return j = i+++0;
   else if (n<0)
      return i+++0;
   else
      return 1+2+3;
}

"foo" file with preconditions


//  P() {}

int foo(int i)
{

//  P() {}

   int j;

//  P() {}

   int n;

//  P() {}


   if (n>0)

//  P() {1<=n}

      return j = i+++0;
   else if (n<0)

//  P() {n+1<=0}

      return i+++0;
   else

//  P() {n==0}

      return 1+2+3;
}

"foo" file after partial evaluation

int foo(int i)
{
   int j;
   int n;

   if (n>0)
      return j = i++;
   else if (n<0)
      return i++;
   else
      return 6;
}
