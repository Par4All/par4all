
Source code after privatization

int main(int argc, char **argv)
{
   int i, j = 100;
   for(i = 0; i <= 99; i += 1)
      ;
   for(i = 0; i <= 99; i += 1)
      ;
   //on attends qqch différent de "inconnu"
   j = i;
   return 0;
}

Preconditions after privatization


//  P() {}

int main(int argc, char **argv)
{

//  P() {}

   int i, j = 100;

//  P() {j==100}

   for(i = 0; i <= 99; i += 1)
      ;

//  P(i) {i==100, j==100}

   for(i = 0; i <= 99; i += 1)
      ;

//  P(i) {i==100, j==100}

   //on attends qqch différent de "inconnu"
   j = i;

//  P(i,j) {i==100, j==100}

   return 0;
}

